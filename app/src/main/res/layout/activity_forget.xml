<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/forgetLast"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/last"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="忘记密码"
            android:textSize="25sp"
            android:textColor="#000000" />

    </RelativeLayout>

    <EditText
        android:id="@+id/forgetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:hint="请输入邮箱"
        android:textColorHint="#7B7D7D"
        android:textSize="20sp"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:background="@drawable/translucent"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/forgetEmailIdentify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:hint="请输入邮箱验证码"
            android:textColorHint="#7B7D7D"
            android:textSize="20sp"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:background="@drawable/translucent"
            android:layout_toLeftOf="@+id/getIdentifyCode"
            />
        <TextView
            android:id="@+id/forgetGetIdentifyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="获取验证码"
            android:textColorHint="#7B7D7D"
            android:textSize="20sp"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:background="@drawable/translucent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/forgetNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:hint="请输入新密码"
        android:textColorHint="#7B7D7D"
        android:textSize="20sp"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:background="@drawable/translucent"
        />
    <EditText
        android:id="@+id/forgetPasswordAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:hint="请确认密码"
        android:textColorHint="#7B7D7D"
        android:textSize="20sp"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:background="@drawable/translucent"
        />
    <Button
        android:id="@+id/forgetFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:text="找回密码"
        android:textSize="25sp"/>

</LinearLayout>